<aside>
  {{partial 'd/show_sidebar'}}
  {{#if isDirty}}
    <button class="cta" {{action save}}>Save</button>
  {{/if}}
  {{#if errors}}
    {{#each msg in errors}}
      <p style="color: red;">{{msg}}</p>
    {{/each}}
  {{/if}}
  {{#linkTo 'd.show' this}}Back{{/linkTo}}
</aside>
<div class="main">
  {{partial 'd/admin_show'}}
</div>