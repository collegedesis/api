<section class="activity">
  <h4>Posted Bulletins</h4>
  {{#if bulletins}}
    <ul>
      {{#each bulletin in bulletins}}
      <li class="small">{{#linkTo 'n.story' bulletin}}{{bulletin.title}}{{/linkTo}}</li>
      {{/each}}
    </ul>
  {{else}}
    <p class="small muted">{{name}} has not posted anything yet.</p>
  {{/if}}
  {{#if currentUserIsMember}}
    <div class="cta">{{#linkTo 'n.submit'}}Post{{/linkTo}}</div>
  {{/if}}
</section>