= hb 'if formVisible' do
  {{view Ember.TextField valueBinding="first_name" placeholder="first name"}}
  {{view Ember.TextField valueBinding="last_name" placeholder="last name"}}    
  {{view Ember.TextField valueBinding="email" placeholder="email"}}
  = hb 'if verificationSent' do
    {{view Ember.TextField valueBinding="password" placeholder="Enter code"}}
    = hb 'if emailHasBeenVerified' do
      %button{_action: 'createUser target="controller"'}Claim
    = hb 'else'
    %button{_action: 'verifyEmail target="controller"'}Verify