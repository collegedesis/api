<nav>
  <h1 class="logo" {{action goHome}}><span>College</span>Desis</h1>
  <ul>
    <li>{{#linkTo 'index'}}Home{{/linkTo}}</li>
    {{#if newsPage}}
      <li>{{#linkTo n}}News{{/linkTo}}</li>
    {{else}}
      <li>{{#linkTo news}}News{{/linkTo}}</li>
    {{/if}}
    <li>{{#linkTo about}}About{{/linkTo}}</li>
    <li>{{#linkTo directory}}Directory{{/linkTo}}</li>
  </ul>

  <ul class="account">
  {{#if currentUser}}
    <li>{{#linkTo 'users.me'}}<img {{bindAttr src="currentUser.avatar_url"}} />Profile{{/linkTo}}</li>
    {{#if currentUser}}<li><a {{action logout}}>Sign out</a></li>{{/if}}
  {{else}}
    <li>{{#linkTo 'login'}}Log in{{/linkTo}}</li>
  {{/if}}
  </ul>
</nav>
<div class="messages">
  {{#if currentUser}}
    {{#unless currentUser.approved}}
      <p class="error">Get your profile approved by registering a membership with one of the {{numOfOrganizations}} organizations in our {{#linkTo 'directory'}}directory{{/linkTo}}!</p>
    {{/unless}}
  {{/if}}
</div>