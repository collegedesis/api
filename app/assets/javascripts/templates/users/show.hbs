<div class="main profile-page">
  {{App.session.messages}}
  <div class="profile-head">
    <img class="avatar" {{bindAttr src="avatar_url"}}>
    <h1>{{full_name}}</h1>
  </div>
  <div class="info">
    <h3>Memberships</h3>
    <ul class="memberships">
      {{#each mem in memberships}}
        {{#if mem.isNew}}
          <li>{{view Ember.Select contentBinding="controllers.organizationsIndex.content"
                                  optionLabelPath="content.display_name"
                                  selectionBinding="mem.organization"}}</li>
        {{else}}
          <li>
            <button {{action deleteMembership mem}}>x</button> {{mem.display_name}}
          </li>
        {{/if}}
      {{/each}}
      <a {{action addMembership}}>Add Membership</a>
    </ul>
    <div class="control">
    {{#if dirtyRecords}}
      <button {{action submit}}>Save</button>
      <button {{action cancel}}>Cancel</button>
    {{/if}}
    </div>
  </div>
</div>
