<h3>Quick Look</h3>
<table>
  <tr>
    <td class="heading">Name</td>
    <td>{{name}}</td>
  </tr>
  <tr>
    <td class="heading">University</td>
    <td>{{university_name}}</td>
  </tr>
  <tr>
    <td class="heading">Reputation</td>
    <td>{{reputation}}</td>
  </tr>
  <tr>
    <td class="heading">Members</td>
    <td>{{memberships.length}}</td>
  </tr>
  {{#if currentUser}}
    <tr>
      <td class="heading">You</td>
      <td>{{currentUserStatus}}</td>
    </tr>
  {{/if}}
</table>
{{#if currentUser}}
  {{#if currentUserIsMember}}
    {{#if canApplyForAdmin}}
      <a {{action applyAdmin}} class="cta">Become Admin</a>
    {{/if}}
    {{#if pendingAdminApplication}}
      <p>You applied to be an administrator. Awaiting verification!</p>
    {{/if}}
  {{else}}
    <div class="cta">
      {{#linkTo 'users.show' currentUser}}Register{{/linkTo}}
    </div>
  {{/if}}
{{else}}
  <div class="cta">
    {{#linkTo 'users.new'}}Sign up{{/linkTo}}
  </div>
{{/if}}