<h3>Quick Look</h3>
<table class="left-heading">
  <tr>
    <td>Name</td>
    <td>{{name}}</td>
  </tr>
  <tr>
    <td>University</td>
    <td>{{university_name}}</td>
  </tr>
  <tr>
    <td>Reputation</td>
    <td>{{reputation}}</td>
  </tr>
  <tr>
    <td>Members</td>
    <td>{{memberships.length}}</td>
  </tr>
  {{#if currentUser}}
    <tr>
      <td>You</td>
      <td>{{currentUserStatus}}</td>
    </tr>
  {{/if}}
</table>
{{#if currentUser}}
  {{#if currentUserIsMember}}
    {{#if canApplyForAdmin}}
      <a {{action applyAdmin}} class="cta">Become Admin</a>
    {{/if}}
    {{#if pendingAdminApplication}}
      <p>You applied to be an administrator. Awaiting verification!</p>
    {{/if}}
  {{else}}
    <div class="cta">
      {{#linkTo 'users.me'}}Register{{/linkTo}}
    </div>
  {{/if}}
{{else}}
  <div class="cta">
    {{#linkTo 'users.new'}}Sign up{{/linkTo}}
  </div>
{{/if}}