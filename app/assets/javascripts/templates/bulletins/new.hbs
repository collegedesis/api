<aside>
  <h3>Resources</h3>
  <ul>
    <li><a href="/#/bulletins/welcome-to-the-bulletin-board">Why {{#if isPost}}write{{else}}submit{{/if}} a bulletin?</a></li>
    <li><a href="/#/bulletins/want-a-retweet-here-s-something-better">How to get it tweeted</a></li>
    {{#if isPost}}<li><a href="/#/bulletins/making-your-bulletins-look-pretty">Making your bulletins look pretty</a></li>{{/if}}
  </ul>
  {{#if isPost}}
    <button {{action preview}}>{{#if showingPreview}}Edit{{else}}Preview{{/if}}</button>
  {{/if}}
</aside>
<div class="main">
  <h3 class="options">
    {{#if isPost}}
      <a {{bindAttr class="isLink:selected"}} {{action setLink}}>Submit a link</a> to another website or article instead.
    {{else}}
      <a {{bindAttr class="isPost:selected"}} {{action setPost}}>Write</a> a blog post instead.
    {{/if}}
  </h3>
  <div class="bulletin-new">
  {{#formFor content}}
    {{#unless controller.showingPreview}}
      {{input title}}
    {{/unless}}
    {{#if isLink }}
      {{input url placeholder="Start with http:// or https://"}}
    {{/if}}

    {{#if isPost}}
      {{#if controller.showingPreview}}
        <div class="preview">
            <h2>{{#if title}}{{title}}{{else}}No title{{/if}}</h2>
            <div class="bulletin-body">{{htmlBody}}</div>
          </div>
      {{else}}
        {{input body as="text"}}
      {{/if}}
    {{/if}}
    {{#unless controller.errors}}
      {{submit}}
    {{else}}
      {{#if isLink}}
        <p>Enter a valid link and title to submit!</p>
      {{else}}
        <p>Write something to submit!</p>
      {{/if}}
    {{/unless}}
  {{/formFor}}
  </div>
</div>