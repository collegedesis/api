<div class="bulletin-wrapper">
  <span class="title">
  {{#linkTo 'news.story' this}}
    {{title}}
  {{/linkTo}}
  </span>
  <span class="subtext">
    {{#if authorIsOrganization}}
      {{#linkTo 'organizations.show' author}}{{author.name}}{{/linkTo}}
    {{/if}}
    {{#if authorIsUser}}{{author.full_name}}{{/if}}
  </span>
</div>