<aside>
  <p>{{#linkTo "bulletins.index"}}&larr; Back{{/linkTo}}</p>
  <div class="vote">
    {{#unless hasBeenVotedOn}}
      <a {{action voteOnBulletin}}></a>
      <h4>Recommend</h4>
    {{else}}
      <h3>{{votes.length}}</h3>
      <h4>Recommendations</h4>
    {{/unless}}
  </div>
</aside>
<div class="main">
  <div class="bulletin">
    <div class="bulletin-header">
      <h1>
        {{#if isLink}}
          <a {{bindAttr href="url"}} target="_blank">{{title}}</a>
        {{else}}
          {{title}}
        {{/if}}
      </h1>
      <span class="date">Posted on {{humanizedCreatedAt}}</span>
    </div>
    <div class="bulletin-body">{{htmlBody}}</div>
    <div class="bulletin-comments">
      <h4>Comments</h4>
      {{#if controllers.application.approvedMember}}
        {{view Ember.TextArea valueBinding="comment" placeholder="Add a comment"}}
        <button {{action submitComment}}>Submit</button>
      {{/if}}
      {{#if comments}}
        <ul>
        {{#each comment in comments}}
          <li>
            <p>{{comment.body}}</p>
            {{comment.author}}
          </li>
        {{/each}}
        </ul>
      {{else}}
        No comments
      {{/if}}
    </div>
  </div>
</div>