%section.show
  %h1 Add a new organization
  %table
    %tr
      %td Name
      %td {{view Ember.TextField valueBinding="name"}}
    %tr
      %td University
      %td {{view Ember.TextField valueBinding="university"}}
    %tr
      %td City
      %td {{view Ember.TextField valueBinding="city"}}
    %tr
      %td State
      %td {{view Ember.TextField valueBinding="state"}}
    %tr
      %td Type
      %td {{view Ember.Select contentBinding="org_types" optionLabelPath="content.name" optionValuePath="content.int_ref" valueBinding="org_type"}}
  %a.button{event:{action:'createNew', target:'controller'}}Submit